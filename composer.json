{
    "name": "processmaker/spark-connector-send-email",
    "description": "ProcessMaker BPM Connectors that provide Email service",
    "type": "project",
    "require": {
	    "processmaker/spark": "4.0.*",
	    "spatie/server-side-rendering": "^0.2.5"
    },
    "autoload": {
        "psr-4": {
            "ProcessMaker\\Packages\\Connectors\\Email\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ProcessMaker\\Packages\\Connectors\\Email\\PluginServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan vendor:publish --tag=spark-package-email-connector"
        ]
    }
}
